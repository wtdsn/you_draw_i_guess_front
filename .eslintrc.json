{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:vue/vue3-essential"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "vue"
  ],
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "vue/component-name-in-template-casing": [
      "warn",
      "PascalCase"
    ],
    "vue/multi-word-component-names": [
      "off"
    ],
    "no-var": [
      "error"
    ],
    "prefer-const": [
      "warn"
    ],
    "no-mixed-spaces-and-tabs":[
      "off"
    ]
  }
}